# Mini-Assignment #2: Rock, Scissors, Paper, Lizard, Spock

# imports random for randrange function used to pick computers choice
import random

# converts player choice as a word and converts to game piece number
def name_to_number(name):
    # convert name to number using if/elif/else
    # don't forget to return the result!
    if name == "rock":
        player_number = 0
        return player_number
    elif name == "Spock":
        player_number = 1
        return player_number
    elif name == "paper":
        player_number = 2
        return player_number
    elif name == "lizard":
        player_number = 3
        return player_number
    elif name == "scissors":
        player_number = 4
        return player_number
    else:
        player_number = "Error: Something went horribly wrong!"
        return player_number

#converts computer number choice chosen randomly to a named game piece
def number_to_name(number):
    if number == 0:
        player_name = "rock"
        return player_name
    elif number == 1:
        player_name = "Spock"
        return player_name
    elif number == 2:
        player_name = "paper"
        return player_name
    elif number == 3:
        player_name = "lizard"
        return player_name
    elif number == 4:
        player_name = "scissors"
        return player_name
    else:
        player_name = "Error: Something went horribly wrong!"
        return player_name
    
# main function of the game, takes player choice, generates computer choice, translates
# numbers to names and names to numbers, then calculutes winner using subtraction and
# modulus
def rpsls(player_choice): 
    
    # print a blank line to separate consecutive games
    print " "

    # print out the message for the player's choice
    print "Player picks: " + player_choice

    # convert the player's choice to player_number using the function name_to_number()
    player_number = name_to_number(player_choice)

    # compute random guess for comp_number using random.randrange()
    computer_choice = random.randrange(0, 4)
    
    # convert comp_number to comp_choice using the function number_to_name()
    comp_choice = number_to_name(computer_choice)
    
    # print out the message for computer's choice
    print "Computer picks: " + comp_choice
    
    # compute difference of comp_number and player_number modulo five
    modulo = (player_number - computer_choice) % 5
    
    # use if/elif/else to determine winner, print winner message
    if modulo == 0:
        winner = "Player and Computer Tie!"
        print winner
    elif modulo == 1:
        winner = "Player Wins!"
        print winner
    elif modulo == 2:
        winner = "Player Wins!"
        print winner
    else:
        winner = "Computer Wins!"
        print winner
    
# test your code - THESE CALLS MUST BE PRESENT IN YOUR SUBMITTED CODE
rpsls("rock")
rpsls("Spock")
rpsls("paper")
rpsls("lizard")
rpsls("scissors")
